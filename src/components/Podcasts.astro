import { getCollection } from 'astro:content';
const podcasts: any = await getCollection('podcasts');
console.log(podcasts);

---
<ul>
    {podcasts.map((podcast:any) => (
            <a href={podcast.data.link} target="_blank" rel="noopener noreferrer" class="podcast-card">
                <div class="podcast-thumbnail" style={`background-image: url('${podcast.data.thumbnail ||`/assets/${"sample-1.webp"}`}')`}></div>
                <div class="podcast-title">{podcast.data.title}</div>
            </a>
            <style>
                .podcast-card {
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    text-align: center;
                    width: 300px;
                    margin: 20px auto;
                    border: 1px solid #ddd;
                    border-radius: 8px;
                    overflow: hidden;
                    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                    text-decoration: none;
                    color: #333;
                    transition: transform 0.2s, box-shadow 0.2s;
                }

                .podcast-card:hover {
                    transform: translateY(-5px);
                    box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
                }

                .podcast-thumbnail {
                    width: 100%;
                    height: 180px;
                    background-size: cover;
                    background-position: center;
                }

                .podcast-title {
                    font-size: 1.2rem;
                    font-weight: bold;
                    padding: 15px;
                    background-color: #f9f9f9;
                    width: 100%;
                }
            </style>
    ))}
</ul>
